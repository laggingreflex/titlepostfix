{
    "manifest_version": 2,
    "name": "titlepostfix",
    "description": "Add a postfix to your tab title(s)",
    "version": "0.1",

    "permissions": [
        "tabs",
        "storage",
        "*://*/*"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "data/icon.png",
        "default_popup": "popup.html"
    }
}
